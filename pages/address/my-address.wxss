page {
  height: 100%;
  background: #f2f2f2;
}

.wrapbox {
  position: relative;
}

.box {
  background: #f2f2f2;
  width: 750rpx;
}

/* tab切换 */

.box .tabs {
  background: #fff;
  width: 750rpx;
  height: 104rpx;
  line-height: 104rpx;
  color: #121212;
  font-size: 32rpx;
  display: flex;
}

.box .tabs .tab {
  width: 250rpx;
  text-align: center;
}

.box .tabsline {
  position: relative;
  left: 0rpx;
  width: 250rpx;
  height: 3rpx;
  background: #f45322;
  transition: 0.4s all ease;
}

.box .tabscontents .tabcontent .li {
  margin: 0 0 20rpx 0;
  background: #fff;
}

.box .tabscontents .tabcontent {
  display: none;
}

.box .tabscontents .tabcontent.show {
  display: block;
}

.box .tabscontents .tabcontent.hidden {
  display: none;
}

.wrap {
  position: relative;
}

.wrap::-webkit-scrollbar {
  display: none;
}

.search-wrap {
  display: flex;
  padding: 18rpx 0 26rpx 42rpx;
}

.search-ipt {
  display: flex;
  position: relative;
  width: 560rpx;
  height: 72rpx;
  border-radius: 36rpx;
  border: 1rpx solid #d9d9d9;
  background: #fff;
}

.search-ipt .ipt-icon {
  line-height: 72rpx;
  margin-right: 22rpx;
  margin-left: 30rpx;
}

.search-ipt .ipt-icon image {
  width: 48rpx;
  height: 50rpx;
  margin: 11rpx 0;
  background-size: contain;
}

.form1 {
  display: flex;
  width: 100%;
  height: 100%;
  align-items: center;
  justify-content: center;
}

.ipt-wrap {
  width: 100%;
}

.ipt-wrap input {
  display: block;
  border: none;
  background: none;
  width: 100%;
  height: 65rpx;
  line-height: 65rpx;
  font-size: 28rpx;
}

.address-manage {
  flex: 1;
  text-align: center;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 32rpx;
}

.address-manage.active {
  color: #e83f57;
}

.content-wrap {
  border: 3rpx solid #e9e9e9;
}

.content-wrap {
  padding: 30rpx 40rpx 14rpx 42rpx;
}

.adr-wrap {
  display: flex;
  margin-bottom: 5rpx;
}

.adr-wrap  view {
  width: 50%;
  color: #121212;
}

.adr-name {
  font-size: 36rpx;
  overflow: hidden;
  /* height: 0.4rem; */
  text-overflow: ellipsis;
  white-space: nowrap;
}

.adr-phone {
  font-size: 32rpx;
  text-align: right;
}

.adr-detail {
  font-size: 28rpx;
  color: #898989;
  line-height: 40rpx;
}

.adr-edit {
  position: relative;
  display: flex;
  height: 78rpx;
  line-height: 78rpx;
  padding: 0 40rpx 0 42rpx;
}

.adr-edit .image {
  width: 36rpx;
  height: 36rpx;
  margin: 21rpx 10rpx 21rpx 0;
  background-size: contain;
}

.edit-btn, .detail-btn {
  position: absolute;
  top: 0;
  display: flex;
  font-size: 28rpx;
  color: #898989;
}

.edit-btn .iconfont, .detail-btn .iconfont {
  display: block;
  font-size: 40rpx;
  margin-right: 16rpx;
}

.edit-btn {
  right: 206rpx;
}

.detail-btn {
  right: 42rpx;
}

.new-add-address {
  position: fixed;
  bottom: 50px;
  width: 100%;
  z-index: 999;
  height: 3vh;
}

.new-add-address.showBtn {
  display: block;
}

.new-add-address button {
  display: block;
  margin: 0 auto;
  width: 600rpx;
  height: 88rpx;
  line-height: 88rpx;
  border: none;
  border-radius: 60rpx;
  background-color: #e83f57;
  font-size: 32rpx;
  color: #fff;
  box-shadow: -1rpx 2rpx 15rpx #280909;
}

input[type=search]::-webkit-search-cancel-button {
  -webkit-appearance: none;
}

.loading {
  position: fixed;
  left: 50%;
  top: 40%;
  transform: translate(-50%);
}

.loading image {
  width: 100rpx;
  height: 100rpx;
  background-size: contain;
}

.noaddress {
  position: absolute;
  left: 50%;
  top: 30%;
  transform: translate(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.noaddress image {
  width: 250rpx;
  height: 286rpx;
  background-size: contain;
}

.noaddress .addresstxt {
  margin: 34rpx 0 0 0;
  font-size: 24rpx;
  color: #797979;
}

.noaddress .addaddress {
  margin: 54rpx auto 0;
  font-size: 28rpx;
  color: #e83f57;
  width: 166rpx;
  height: 56rpx;
  line-height: 56rpx;
  border: 1px solid #e83f57;
  border-radius: 20px;
  text-align: center;
}

.tabscontents{
   padding-bottom: 150rpx; 
}
#allHeight{
  padding-bottom: 16rpx;
}