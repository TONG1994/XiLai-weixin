.box {
  background: #f2f2f2;
}

.box .tabs {
  background: #fff;
  width: 750rpx;
  height: 104rpx;
  line-height: 104rpx;
  color: #121212;
  font-size: 32rpx;
  display: flex;
}

.box .tabs .tab {
  width: 250rpx;
  text-align: center;
}

.box .tabsline {
  position: relative;
  left: 0px;
  width: 250rpx;
  height: 2rpx;
  background: #f45322;
  margin: 0 0 16rpx 0;
  transition: 0.4s all ease;
}

.box .tabscontents .tabcontent {
  display: none;
}

.box .tabscontents .tabcontent.show {
  display: block;
}

.box .tabscontents .tabcontent.hidden {
  display: none;
}

.expressbox {
  background: #fff;
  margin: 0 0 20rpx 0;
}

.expressbox .expressNo {
  padding: 14rpx 0 0 42rpx;
  font-size: 28rpx;
  color: #9b9b9b;
}

.expressbox .expressNo text {
  margin: 0 16rpx 0 0;
}

.expressbox .cityboxfrom {
  text-align: center;
  width: 30%;
}

.expressbox .cityboxto {
  text-align: center;
  margin: 0 0 0 20rpx;
  width: 30%;
}

.expressbox .fromto {
  padding: 36rpx 30rpx;
  display: flex;
  justify-content: space- between;
  align-items: center;
  /* text-align: center; */
  border-bottom: 1px dashed #e9e9e9;
}

.expressbox .fromto .city {
  font-size: 36rpx;
  margin-bottom: 12rpx;
  color: #000;
  /* font-weight: bolder; */
}

.expressbox .fromto .name {
  font-size: 28rpx;
  color: #9b9b9b;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}

.expressbox .status {
  /* width: auto; */
  width: 30%;
  text-align: center;
  height: 64rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  background-size: 100% 100%;
  line-height: 40rpx;
  display: flex;
  justify-content: center;
}

.test1 {
  /* height: 100%;  */
  width: 100%;
  background-position: center;
  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
