.loading {
  position: fixed;
  left: 50%;
  top: 40%;
  transform: translate(-50%);
}

.loading image {
  width: 100rpx;
  height: 100rpx;
  background-size: contain;
}

.noaddress {
  position: fixed;
  left: 50%;
  top: 25%;
  transform: translate(-50%);
}

.noaddress image {
  width: 212rpx;
  height: 302rpx;
  margin: 0 0 0 30rpx;
  background-size: contain;
}

.noaddress .addresstxt {
  margin: 34rpx 0 0 0;
  font-size: 24rpx;
  color: #797979;
}

.noaddress .addaddress {
  margin: 54rpx auto 0;
  font-size: 28rpx;
  color: #e83f57;
  width: 166rpx;
  height: 56rpx;
  line-height: 56rpx;
  border: 1px solid #e83f57;
  border-radius: 20px;
  text-align: center;
}
