.box {
  width: 750rpx;
  height: 1500rpx;
  background: #f7f7f7;
}
.box .infor {
    font-size: 30rpx;
    padding: 20rpx 30rpx;
    width: auto;
    margin-bottom: 10rpx;
}
.record-wrap {
  background:white;
  height: 300rpx;
  width: 600rpx;
  margin-bottom: 30rpx;
  margin-left: 75rpx;
  margin-right: 75rpx;
  border-radius:10px;
  box-shadow: inset 0 0 8px red;
}

.record-wrap .record {
  display: inline-block;
  height: 110rpx;
  width: 600rpx;
  margin: 80rpx 0 0 0;
}
.record-wrap .word {
  text-align: center;
  font-size: 30rpx;
}


